---
import "@fontsource/archivo-black";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="description" content="Jalkapalloseura Käpylän Sekunda" />
    <meta
      name="keywords"
      content="Sekunda, Jalkapallo, Futis, Fudis, Futsal, Kurasarja, Jalkapalloseura, Urheiluseura, Helsinki, Käpylä, Palloliitto"
    />
    <link rel="icon" type="image/vnd.microsoft.icon" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <title>Käpylän Sekunda</title>
  </head>
  <body>
    <div id="bg-container">
      <video autoplay muted loop id="video-loop">
        <source src="/background.mp4" type="video/mp4" />
      </video>
    </div>
    <main>
      <slot />
    </main>
  </body>
</html>
<style is:global>
  html,
  body {
    font-family: "Archivo Black", sans-serif;
    font-size: 120%;

    color: rgb(249, 238, 4);
    margin: 0;
    height: 100vh;
  }
  #bg-container {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100vh;
    display: grid;
    justify-content: center;
    align-content: center;
    z-index: -1;
  }
  #video-loop {
    position: relative;
    height: 100vh;
    left: 50%;
    transform: translateX(-50%);
  }
  main {
    width: 100vw;
    height: 100vh;
    border-radius: 1rem;
    overflow-y: scroll;
    -ms-overflow-style: none;
    scrollbar-width: none;
    scroll-snap-type: y mandatory;
  }
  main::-webkit-scrollbar {
    display: none;
  }
</style>
